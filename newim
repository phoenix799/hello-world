public double getOfficersTotalSalOnBaseCamp(int baseCampId)
	{
		double sum=0.0;
		try
		{
			Class.forName(driver);
			con=DriverManager.getConnection(dbUrl, dbUserName, dbPassword);
			PreparedStatement pst=con.prepareStatement("select OFFICER_SAL from TBL_OFFICER_963768 where BASE_CAMP_ID=?");
			pst.setInt(1, baseCampId);
			
			ResultSet rs=pst.executeQuery();
			while(rs.next())
			{
				sum=sum+rs.getDouble(1);
				
			}
		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
		finally
		{
			if(con!=null)
			{
				try
				{
					con.close();
				}
				catch(Exception e)
				{
					e.printStackTrace();
				}
			}
		}
		
		return sum;
		
	}
